{
    "openapi": "3.0.0",
    "info": {
        "title": "EasyEarn API",
        "description": "EasyEarn API文档",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3000",
            "description": "test server"
        }
    ],
    "paths": {
        "/wallet/create": {
            "post": {
                "summary": "创建一个钱包",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "address": {
                                        "type": "string",
                                        "description": "钱包地址",
                                        "example": "11112gNSU4Ytt3b2TpAQnggARSidPpNxrNkWqFFg52aNe5t6sjCy2c"
                                    }
                                },
                                "required": ["address"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "成功创建钱包",
                        "content": {
                            "application/json": {
                                "example": {
                                    "msg": "wallet created successfully"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "无效参数",
                        "content": {
                            "application/json": {
                                "example": {
                                    "msg": "invalid request body"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "无效地址",
                        "content": {
                            "application/json": {
                                "example": {
                                    "msg": "invalid address"
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "区块链操作失败，可能是因为钱包已存在",
                        "content": {
                            "application/json": {
                                "example": {
                                    "msg": "wallet already exists"
                                }
                            }
                        }
                    }
                }
            }
        }, 
        "/wallet/balance": {
            "post": {
                "summary": "获取钱包余额",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "address": {
                                        "type": "string",
                                        "description": "钱包地址",
                                        "example": "11112gNSU4Ytt3b2TpAQnggARSidPpNxrNkWqFFg52aNe5t6sjCy2c"
                                    }
                                },
                                "required": ["address"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "成功获取钱包余额",
                        "content": {
                            "application/json": {
                                "example": {
                                    "balance": 10000,
                                    "msg": "get balance successfully"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "无效参数",
                        "content": {
                            "application/json": {
                                "example": {
                                    "msg": "invalid request body"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "无效地址",
                        "content": {
                            "application/json": {
                                "example": {
                                    "msg": "invalid address"
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "区块链操作失败，可能是因为钱包不存在",
                        "content": {
                            "application/json": {
                                "example": {
                                    "msg": "wallet not found"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}